    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />

    <screen id="start">
        <layer childLayout="center">
            <panel width="50%" height="50%" align="center" valign="center" childLayout="vertical" backgroundColor="#55a5" padding="10">
                <control id="edit_tabs" name="nifty-tabs" buttonWidth="50%" buttonHeight="50px">
                    <control id="tab_1" name="nifty-tab" caption="tab 1"/>
                    <control id="tab_2" name="nifty-tab" caption="tab 2"/>
                </control>
            </layer>
        </screen>
    </nifty>